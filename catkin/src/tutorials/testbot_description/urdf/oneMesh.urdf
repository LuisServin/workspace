<?xml version="1.0" encoding="UTF-8"?>

<robot name="one_mesh">
	<link name="base_link">
		<visual>
			<origin rpy="0 0 0" xyz="0.15 0 0.35" />
			<geometry>
				<mesh filename="package://testbot_description/urdf/head_pan.stl"/>
			</geometry>
		</visual>
	</link>

	<joint name="base_link_to_base_joint" type="fixed" >
		<parent link="base_link" />
		<child link="base_laser" />
		<origin xyz="0 0 1.0" />
	</joint>

	<link name="base_laser">
		<visual>
			<origin rpy="0 0 0" xyz="0 0 0" />
			<geometry>
				<cylinder length="0.6" radius="0.2" />
			</geometry>
		</visual>
	</link>
</robot>